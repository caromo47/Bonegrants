<div class="lender_container">
	<h1 class="welcome"> Welcome, <%= @current_user.first_name %> <%= @current_user.last_name %>! </h1>
	<h2 class="needed"> Amount Needed: $<%= @current_user.capital_needed %> </h2>
	<h2 id="raised" class="capital"> Amount Raised<span class="blue">:</span> $<%= @current_user.loans.sum(:amount_loaned) %> </h2>

	<h2 class="list_header"> List of people who have lent you money </h2>
	<table class="table">
	    <tr>
	        <th> Name </th>
	        <th> Email </th>
	        <th> Amount Lent </th>
	    </tr>
	    <% @loans.each do |loan| %>
	        <tr>
	            <td> <%= loan.lender.first_name %> <%= loan.lender.last_name %> </td>
	            <td> <%= loan.lender.email %> </td>
	            <td> <%= loan.amount_loaned %> </td>
	        </tr>
	    <% end %>
	</table>

</div>
